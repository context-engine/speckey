{
    "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
    "packageManager": "npm",
    "testRunner": "command",
    "commandRunner": {
        "command": "bun test packages/core"
    },
    "mutate": [
        "packages/core/src/**/*.ts",
        "!packages/core/src/**/index.ts"
    ],
    "reporters": [
        "clear-text",
        "progress"
    ],
    "tempDirName": ".stryker-tmp",
    "cleanTempDir": "always",
    "concurrency": 2,
    "timeoutMS": 60000,
    "thresholds": {
        "high": 80,
        "low": 60,
        "break": 50
    }
}